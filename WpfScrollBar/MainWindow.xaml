                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="3" Margin="2">
                    <Image Source="/Images/kebi.jpg" Width="100" Height="100"/>
                </Border>

            </StackPanel>
        </Canvas>
        <ScrollBar Grid.Row="1" Orientation="Horizontal" Maximum="{Binding Maximum}" Value="{Binding X}" ViewportSize="{Binding ElementName=viewport,Path=ActualWidth}"/>
        <TextBlock Grid.Row="2" Text="ScrollBar" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>

    </Grid>
</Window>
