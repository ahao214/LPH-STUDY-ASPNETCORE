<Window
    x:Class="WpfAppBase.GroupBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppBase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GroupBox介绍"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <GroupBox
            Width="150"
            Height="150"
            BorderBrush="Purple"
            BorderThickness="5">
            <GroupBox.Header>
                <Border>
                    <Label Content="系统管理" />
                </Border>
            </GroupBox.Header>
            <StackPanel>
                <Button Margin="5,3" Content="用户管理" />
                <Button Margin="5,3" Content="角色管理" />
                <Button Margin="5,3" Content="菜单管理" />

            </StackPanel>


        </GroupBox>
    </Grid>
</Window>
