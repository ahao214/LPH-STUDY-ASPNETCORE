<Window
    x:Class="WpfAppBase.ExpanderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfAppBase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Expander"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Expander
            Width="200"
            Height="auto"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Blue"
            BorderThickness="2"
            Header="系统管理"
            IsExpanded="True">
            <StackPanel>
                <Button Margin="5" Content="用户管理" />
                <Button Margin="5" Content="角色管理" />
                <Button Margin="5" Content="菜单管理" />
            </StackPanel>
        </Expander>
    </Grid>
</Window>
