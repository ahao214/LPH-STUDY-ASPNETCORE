<Window x:Class="TestXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestXML"
        mc:Ignorable="d"
        Title="C#读取XML" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="600" Name="listView">
            <ListView.View >
                <GridView >
                    <GridViewColumn Header="年级" Width="100" DisplayMemberBinding="{Binding Grade}"/>
                    <GridViewColumn Header="老师" Width="100" DisplayMemberBinding="{Binding Teacher}"/>
                    <GridViewColumn Header="姓名" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="地址" Width="100" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="年龄" Width="100" DisplayMemberBinding="{Binding Age}"/>
                </GridView>
            </ListView.View>
            
        </ListView>
    </Grid>
</Window>
