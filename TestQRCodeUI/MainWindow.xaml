<Window x:Class="TestQRCodeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestQRCodeUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txt" Width="300" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Width="260" Height="260" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown">
            <Image Name="img"/>
        </TextBlock>
    </Grid>
</Window>
