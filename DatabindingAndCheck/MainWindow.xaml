<Window
    x:Class="DatabindingAndCheck.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabindingAndCheck"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="500"
    Height="200"
    mc:Ignorable="d">
    <StackPanel>
        <TextBox
            x:Name="InputTextBox"
            Margin="10"
            FontFamily="Arial"
            FontSize="16" />
        <Button
            Width="80"
            Margin="10"
            Click="OutputName_Click"
            Content="Output"
            FontFamily="Arial"
            FontSize="16" />
        <TextBox
            x:Name="OutputTextBox"
            Margin="10"
            FontFamily="Arial"
            FontSize="16"
            Text="" />

    </StackPanel>
</Window>
