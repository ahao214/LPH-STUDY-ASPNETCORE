<UserControl x:Class="WpfComponentLibrary.TP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfComponentLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Viewbox>
        <Grid Width="100" Height="400">
            <!--画外边框(线性渐变一般采用border)-->
            <Rectangle StrokeThickness="20" RadiusX="40" RadiusY="15">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="7" ShadowDepth="0" Direction="0"></DropShadowEffect>
                </Rectangle.Effect>
                <Rectangle.Stroke>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        
                        <GradientStop Color="Black"></GradientStop>
                        <GradientStop Color="White" Offset="0.8"></GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
            </Rectangle>

        </Grid>
    </Viewbox>
</UserControl>
